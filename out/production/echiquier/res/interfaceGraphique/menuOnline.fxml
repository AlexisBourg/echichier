<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<GridPane xmlns:fx="http://javafx.com/fxml" id="gridPane" alignment="center" hgap="20" vgap="11" stylesheets="@styleMenuOnline.css">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Label text="Créer une partie :"
           GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2"

    />
    <Button fx:id="heberger"
            GridPane.columnIndex="0" GridPane.rowIndex="3"
            GridPane.columnSpan="2"
            prefWidth="242.0"
            minWidth="50"
            minHeight="10"
            text="Créer">

    </Button>

    <Label text="Rejoindre une partie :"
           GridPane.columnIndex="2" GridPane.rowIndex="0"
           GridPane.columnSpan="2"
    />

    <VBox  GridPane.columnIndex="2" GridPane.rowIndex="1">
        <Label text="Entrer l'adresse de connection :"/>
        <TextField fx:id="ecrirAdresse"/>
        <HBox.margin>
            <Insets bottom="30.0" top="-50.0"/>
        </HBox.margin>
    </VBox>


    <VBox  GridPane.columnIndex="3" GridPane.rowIndex="1">
        <Label text="Entrer le port de connection :"/>
        <TextField fx:id="ecrirPort"/>
        <HBox.margin>
            <Insets bottom="30.0" top="-50.0"/>
        </HBox.margin>
    </VBox>

    <Button fx:id="rejoindre"
            GridPane.columnIndex="2" GridPane.rowIndex="3"
            GridPane.columnSpan="2"
            prefWidth="242.0"
            minWidth="50"
            minHeight="10"
            text="Rejoindre">

    </Button>

    <Button fx:id="retourMenu"
            prefWidth="242.0"
            minWidth="50"
            minHeight="10"
            text="Retour"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
           GridPane.columnSpan="4">

    </Button>

    <Rectangle id="white"
               GridPane.columnSpan="4" GridPane.rowSpan="4"
               GridPane.columnIndex="0" GridPane.rowIndex="0"
    />

</GridPane>

